@model List<Candy>
@{
    ViewData["Title"] = "Storefront";
}

<div class="text-center">
 <h1 class="display-4">Welcome To The Storefront</h1>
</div>

<div id="carousel" class="carousel slide" data-ride="carousel">
    
        @foreach (var candy in Model) 
        {
        <div class="carousel-item">
            @candy.Name
            @candy.Weight
            @candy.Price
        </div>
        }
    
</div>
